<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/contentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="invisible">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/typeImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:src="@drawable/paid" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/typeImageView"
            android:layout_toRightOf="@+id/typeImageView">

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AmountTransferredTo"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/totalAmountTextView"
                android:layout_toLeftOf="@+id/totalAmountTextView"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/samountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/totalAmountTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Success"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@+id/typeTextView" />

            <TextView
                android:id="@+id/shopNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cascade store"
                android:layout_marginTop="3dp"
                android:textSize="13.5sp"
                android:layout_below="@+id/statusTextView" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/amountText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/EnteredAmount"/>

        <TextView
            android:id="@+id/amountColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/amountText"
            android:layout_toEndOf="@+id/amountText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/amountColoan"
            android:layout_toEndOf="@+id/amountColoan"
            android:text="0.00"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popPayFeeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/popPayFeeText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:text="@string/PopPayFee"/>

        <TextView
            android:id="@+id/popPayFeeColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/popPayFeeText"
            android:layout_toRightOf="@+id/popPayFeeText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/popPayFeeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/popPayFeeColoan"
            android:layout_toEndOf="@+id/popPayFeeColoan"
            android:text="0.00"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/taxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/serviceFeeText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:text="@string/WithdrawnFee"/>

        <TextView
            android:id="@+id/serviceFeeColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/serviceFeeText"
            android:layout_toRightOf="@+id/serviceFeeText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/taxAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/serviceFeeColoan"
            android:layout_toEndOf="@+id/serviceFeeColoan"
            android:text="0.00"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/totalPayableText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/CreditedToBank"/>

        <TextView
            android:id="@+id/totalPayableColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/totalPayableText"
            android:layout_toRightOf="@+id/totalPayableText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/totalPayableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/totalPayableColoan"
            android:layout_toRightOf="@+id/totalPayableColoan"
            android:text="0.00"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="13.5sp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="@string/Description"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:visibility="gone"
        android:text="This is sample desvription lghhgi fhdf dfh dfhgdfhg dfhgdfihgidf gdfihdif hidfgdfhdf dfhgdkf dfjghdfjkghdfjkghdfjgh dfjghdfhg"/>

    <TextView
        android:id="@+id/descriptionLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/lineColor"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/transactedText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/Transactedon"/>

        <TextView
            android:id="@+id/transactedColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/transactedText"
            android:layout_toRightOf="@+id/transactedText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/transactedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/transactedColoan"
            android:layout_toRightOf="@+id/transactedColoan"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/orderidText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/OrderId"/>

        <TextView
            android:id="@+id/orderidColoan"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orderidText"
            android:layout_toEndOf="@+id/orderidText"
            android:layout_centerVertical="true"
            android:text="-"/>

        <TextView
            android:id="@+id/orderidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/orderidColoan"
            android:layout_toEndOf="@+id/orderidColoan"
            android:text=""/>

    </RelativeLayout>

</LinearLayout>