<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/landing_img_slide"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:layout_above="@+id/landing_txt_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="15dp"
            android:src="@drawable/intro_2" />

        <TextView
            android:id="@+id/landing_txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/landing_txt_hint"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="@string/string_first"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/landing_txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:lineSpacingExtra="5dp"
            android:fontFamily="@font/medium"
            android:layout_marginTop="5dp"
            android:paddingRight="60dp"
            android:layout_marginBottom="50dp"
            android:text="dvfgdsgsdgsdgsdgsdgsdgsdgsdgsdgdsgsdgsgsgsgsgsgsgsgsgsgsgsgsg"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>