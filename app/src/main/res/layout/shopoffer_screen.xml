<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#AA000000">

        <ImageView
            android:id="@+id/shopImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/shop_image" />

        <TextView
            android:id="@+id/shopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="18sp"
            android:gravity="start"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_above="@+id/shopAddressTextView"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"/>

        <TextView
            android:id="@+id/shopAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="gjkdzsb dgjh dgdzbhg dgkdsg gusdgh duisg"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/normal"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/rewardBanner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/Reward"
        android:background="#f5f5f5"
        android:gravity="center|start"
        android:paddingLeft="15sp"
        android:paddingStart="15dp"
        android:fontFamily="@font/normal"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="11sp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/rewardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_white_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Reward"
            android:textColor="@color/black"
            android:fontFamily="@font/normal"
            android:textSize="13sp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/offerDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offerNameTextView"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingBottom="7dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:layout_toLeftOf="@+id/offerPercentageTextView"
            android:layout_toStartOf="@+id/offerPercentageTextView"
            android:text=""/>

        <TextView
            android:id="@+id/rewardofferPercentageTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="10%"
            android:gravity="center"
            android:paddingTop="10dp"
            android:fontFamily="@font/normal"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/OFFER"
            android:gravity="center"
            android:textSize="10sp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rewardofferPercentageTextView"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/offerBanner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/OFFER"
        android:background="#f5f5f5"
        android:gravity="center|start"
        android:paddingLeft="15sp"
        android:paddingStart="15dp"
        android:textAllCaps="true"
        android:fontFamily="@font/normal"
        android:textStyle="bold"
        android:textSize="11sp"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/offerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>

</LinearLayout>