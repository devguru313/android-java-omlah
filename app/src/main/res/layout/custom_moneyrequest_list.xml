<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/typeImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/transaction_circle" />

    <RelativeLayout
        android:id="@+id/shopDeatilslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/typeImageView"
        android:layout_toEndOf="@+id/typeImageView">

        <TextView
            android:id="@+id/typeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:fontFamily="@font/normal"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/amountTextView"
            android:layout_toStartOf="@+id/amountTextView"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTD $ 500"
            android:gravity="right"
            android:textColor="@color/black"
            android:fontFamily="@font/normal"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/numbertextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 365446545"
            android:fontFamily="@font/normal"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/amountTextView"
            android:layout_toStartOf="@+id/amountTextView"
            android:layout_below="@+id/typeNameTextView" />

        <TextView
            android:id="@+id/timetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 365446545"
            android:fontFamily="@font/normal"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/statusTextView"
            android:layout_toStartOf="@+id/statusTextView"
            android:layout_below="@+id/numbertextView" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Navigate"
            android:fontFamily="@font/normal"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/timetextView"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_below="@+id/shopDeatilslayout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/typeImageView"
        android:layout_toEndOf="@+id/typeImageView"/>

</RelativeLayout>